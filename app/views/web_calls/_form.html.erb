

          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Schedule a call</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
<!-- start the form , this entierly is rails, the only custom part is the submitd button -->



         <%= form_with(model: web_call, local: true) do |form| %>
              <% if web_call.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(web_call.errors.count, "error") %> prohibited this web_call from being saved:</h2>

                  <ul>
                    <% web_call.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>


  <div class="row">
    <div class="col">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
    </div>  
    <div class="col">
      <div class="field">
        <%= form.label :zipcode %>
        <%= form.text_field :zipcode %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="field">
        <%= form.label :Appliance %>
        <%= form.select :Appliance, ['Microwave', 'Oven', 'Cook Top', 'Range', 'Washer', 'Dryer', 'Dishwasher', 'Freezer', 'refrigerator', 'Garbage Disposal', 'Room Air', 'Television'] %>
      </div>
    </div>

    <div class="col">
      <div class="field">
        <%= form.label :asap %>
        <%= form.check_box :asap %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col">
      <div class="field">
        <%= form.label :timestart %>
        <%= form.select :timestart, ['7:00 am', '8:00 am', '9:00 am', '10:00 am', '11:00 am', '12:00 pm', '1:00pm', '2:00 am', '3:00 am', '4:00 am', '5:00 am', '6:00 am', '7:00 pm', '8:00pm', '9:00 pm'] %>
      </div>
    </div>

    <div class="col">
      <div class="field">
        <%= form.label :timeend %>
        <%= form.select :timeend, ['7:00 am', '8:00 am', '9:00 am', '10:00 am', '11:00 am', '12:00 pm', '1:00pm', '2:00 am', '3:00 am', '4:00 am', '5:00 am', '6:00 am', '7:00 pm', '8:00pm', '9:00 pm'] %>
      </div>
    </div>
  </div>


  <div class="row ">
    <div class="col">
      <div class="field">
        <%= form.label :closed, style:"display: none" %>
        <%= form.check_box :closed, style:"display: none"%>
      </div>
    </div>
  </div>

  <div class="row float-right">
    <div class="col">
      <div class="actions">
        <%= form.submit 'submit', class:"btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<!-- end the form, statrt the end of the modal -->
      </div>
    </div>
  </div>
</div>








