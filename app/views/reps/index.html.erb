<p id="notice"><%= notice %></p>

<h1>Reps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Working</th>
      <th>Pnum</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reps.each do |rep| %>
      <tr>
        <td><%= rep.name %></td>
        <td><%= rep.working %></td>
        <td><%= rep.pnum %></td>
        <td><%= rep.provider %></td>
        <td><%= link_to 'Show', rep %></td>
        <td><%= link_to 'Edit', edit_rep_path(rep) %></td>
        <td><%= link_to 'Destroy', rep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

